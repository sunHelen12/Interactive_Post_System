# EditorConfig is awesome: https://editorconfig.org

# Define basic formatting rules for all files
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Specific settings for Java files
[*.java]
indent_size = 4
tab_width = 4
